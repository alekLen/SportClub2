


@model IEnumerable<SportClub.BLL.DTO.RoomDTO>
<div class="center"><h2>Расписание</h2></div>
<div class="flex center" style="flex-wrap:wrap;">
@foreach (var item in Model)
{
    <div class="padd1" style="margin:10px;">
      <form method="post">
        <img src=@item.Photo width="200" height="200" alt="Photo" style="background-color:wheat" />
        <div>
            <h4 class="white"> @item.Name</h4>
        </div>
                <input type="hidden" value="@item.Id" name="RoomId" />
    <input type="submit" asp-controller="Coach" asp-action="Shedule" value="Выбрать" />
      </form>
    </div>
}
</div>
