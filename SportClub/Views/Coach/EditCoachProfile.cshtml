@model SportClub.BLL.DTO.CoachDTO


@{
    ViewData["Title"] = "Edit";
}

<div class="div_reg">
    <p class="font"> @Resources.Resource.Edit </p>
    <div class="row">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "")

            <div class="form-group" style="margin-left: 40px">

                <label asp-for="Name" class="control-label font white-color_size20"> @Resources.Resource.Name</label>
                <input asp-for="Name" type="text" class="form-control font" style="width: 420px">
                <span asp-validation-for="Name" class="text-danger" style="width: 450px"></span>
            </div>

            <div class="form-group" style="margin-left: 40px">

                <label asp-for="Login" class="control-label font white-color_size20"> @Resources.Resource.loginN</label>
                <input asp-for="Login" type="text" class="form-control" id="login" style="width: 420px">
                <span asp-validation-for="Login" class="text-danger" style="width: 450px"></span>
            </div>

           @*  <div class="form-group" style="margin-left: 40px">
                <label asp-for="Password" class="control-label font white-color_size20"></label>
                <input asp-for="Password" type="password" class="form-control" style="width: 420px">
                <span asp-validation-for="Password" class="text-danger" style="width: 450px"></span>
            </div> *@
             
            <div class="form-group" style="margin-left: 40px">
                <label asp-for="Email" class="control-label font white-color_size20"> @Resources.Resource.email</label>
                <input asp-for="Email" type="email" class="form-control" id="emailInput" style="width: 420px">
                <span asp-validation-for="Email" class="text-danger" style="width: 450px"></span>
            </div>

            <div class="form-group" style="margin-left: 40px;">
                <span class="white-color_size20 font">@Resources.Resource.Photo</span><br />
                <input class="white-color_size20" type="file" name="p" accept=".jpg, .jpeg, .png" /><br /><br />
            </div>

            <div class="form-group" style="margin-left: 40px">
                <label class="font white-color_size20">@Resources.Resource.Post</label>
                <select asp-for="PostId" class="form-control" asp-items="ViewBag.PostId" style="width: 420px"></select>
                <span asp-validation-for="PostId" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-left: 40px">
                <label class="font white-color_size20">@Resources.Resource.Speciality</label>
                <select asp-for="SpecialityId" class="form-control" asp-items="ViewBag.SpecialityId" style="width: 420px"></select>
                <span asp-validation-for="SpecialityId" class="text-danger" style="width: 450px"></span>
            </div>

            <div class="form-group" style="margin-left: 40px">
                <label asp-for="Phone" class="font white-color_size20">@Resources.Resource.Phone</label>
                <input asp-for="Phone" class="form-control" placeholder="(097)-111 11 11" style="width: 420px" />
                <span asp-validation-for="Phone" class="text-danger" style="width: 450px"></span>
            </div>

            <div class="form-group" style="margin-left: 40px">
                <label class="font white-color_size20">@Resources.Resource.gender</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="Мужской" id="male" />
                    <label class="font form-check-label white-color_size20" for="male">@Resources.Resource.man</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="Женский" id="female" />
                    <label class="font form-check-label white-color_size20" for="female">@Resources.Resource.female</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger" style="width: 450px"></span>
            </div>

            <div class="form-group" style="margin-left: 40px">
                <label class="font white-color_size20">@Resources.Resource.DateB</label><br />
                <input type="date" asp-for="DateOfBirth" /><br />
                <span asp-validation-for="DateOfBirth" class="text-danger" style="width: 450px"></span>
            </div>

            <div class="form-group" style="margin-left: 40px">
                <label class="font white-color_size20">@Resources.Resource.Description</label>
                <textarea asp-for="Description" style="width: 420px"></textarea>
                <span asp-validation-for="Description" class="text-danger" style="width: 450px"></span><br />
            </div>

            <br />
            <div class="form-group" style="margin-left: 200px">
                <button type="submit" class="btn btn-primary font y">@Resources.Resource.Confirm !&!?</button><br /><br />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index"> @Resources.Resource.Back</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
