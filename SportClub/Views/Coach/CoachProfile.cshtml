@model SportClub.BLL.DTO.CoachDTO

@{
    ViewData["Title"] = "CoachProfile";
}

<h4 class="whiteY" style="text-align:center;padding:5px; box-shadow: inset 0 -3em 3em rgba(0, 0, 0, 0.1), 0.3em 0.3em 1em black; width: 600px; margin: auto; margin-bottom: 10px;">
    @Resources.Resource.PersonalInformation
</h4>

<div class="container2">
    <form id="registrationForm" action="RegistrationClient" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "")

        <div class="row" style="padding-top: 30px;">
            <div class="column">
                <img src=@Model.Photo width="200" @* height="130" *@ alt="photo1" style="padding:20px;margin-left:30px" id="preview" />
                <div class="form-group" style="margin-left: 70px">
                    <span class="white-color_size20 font">Изменить фото</span><br />
                    <input class="white-color_size20" type="file" name="p" accept=".jpg, .jpeg, .png" onchange="previewImage(event)" /><br /><br />
                </div>

                <div class="form-group" style="margin-left: 70px">
                    <label asp-for="Name" class="control-label" style="color: white" class="font"></label>
                    <input asp-for="Name" type="text" class="form-control" name="name" id="name" class="font" style="width: 420px">
                    <span asp-validation-for="Name" class="text-danger" style="width: 450px"></span>
                </div>

                <div class="form-group" style="margin-left: 70px">
                    <label asp-for="Login" class="control-label" style="color: white" class="font"></label>
                    <input asp-for="Login" type="text" class="form-control" name="login" id="login" style="width: 420px">
                    <span asp-validation-for="Login" class="text-danger" style="width: 450px"></span>
                </div>

                <div class="form-group" style="margin-left: 70px">
                    <label asp-for="Email" class="control-label" style="color: white" class="font"></label>
                    <input asp-for="Email" class="form-control" id="emailInput" style="width: 420px">
                    <span asp-validation-for="Email" class="text-danger" style="width: 450px"></span>
                </div>

                <div class="form-group" style="margin-left: 70px">
                    <label asp-for="Phone" style="color: white" class="font">@Resources.Resource.Phone</label>
                    <input asp-for="Phone" class="form-control" placeholder="(097)-111 11 11" style="width: 420px" />
                    <span asp-validation-for="Phone" class="text-danger" style="width: 450px"></span>
                </div>

                <div class="form-group" style="margin-left: 70px">
                    <label style="color: white" class="font">@Resources.Resource.gender</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="Мужской" id="male" />
                        <label style="color: white" class="font form-check-label" for="male">@Resources.Resource.man</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="Женский" id="female" />
                        <label style="color: white" class="font form-check-label" for="female">@Resources.Resource.female</label>
                    </div>
                </div>

                <div class="form-group" style="margin-left: 70px">
                    <label style="color: white" class="font">@Resources.Resource.DateB</label><br />
                    <input asp-for="DateOfBirth" type="text" />
                    <span asp-validation-for="DateOfBirth" class="text-danger" style="width: 450px"></span>
                </div>
            </div>
        </div>
        <br />
        <div class="form-group" style="margin-left: 66px;padding-bottom:20px;">
            <input type="submit" style="margin-right: 10px" class="btn btn-outline-light buttonsGY" formaction="EditCoachProfile" value="@Resources.Resource.Edit" />
            <input class="btn btn-outline-light buttonsGY" style="margin-right: 10px" formaction="ChangeCoachPassword" type="submit" value="@Resources.Resource.changePassword" />
            @* <input type="submit" class="btn btn-outline-light buttonsGY" formaction="DeleteAdminProfile" value="@Resources.Resource.DeleteAndExit" /> *@
        </div>
        <br />
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    $(document).ready(function () {

        $("#login").on("change", function (e) {
            let log = e.target.value;
            let r = true;
            $.getJSON('/Login/IsLoginIn', function (data) {
                $.each(data, function (key, val) {
                    if (log == val) {
                        $("#log").css("display", "block");
                        r = false;
                    }
                    if (r) {
                        $("#log").css("display", "none");
                    }
                }) 
            }); 
        });


        $('#emailInput').on('blur', function () {
            var email = $(this).val();
            $.get('/Login/IsEmailInUse', { email: email }, function (data) {
                if (data === true) {
                    $('#emailStatus').text('Email уже занят.');
                } 
            });
        });
    });

    function previewImage(event) {
        var input = event.target;
        var preview = document.getElementById('preview');

        var reader = new FileReader();

        reader.onload = function () {
            preview.src = reader.result;
        };

        reader.readAsDataURL(input.files[0]);
    }
</script>

