@{
}
@model SportClub.BLL.DTO.CoachDTO
<div>
    <div style="width:max-content;margin: 10px auto 10px auto;">
        <h4 class="whiteY" style="text-align:center;padding:5px; box-shadow: inset 0 -3em 3em rgba(0, 0, 0, 0.1), 0.3em 0.3em 1em black;">
            @Resources.Resource.Delete
        </h4>
        <div class="div_reg">
           
            <p class="font whiteY" style="font-size: 22px;  text-align: center">  @Resources.Resource.Confirmdeletion </p>

            <div class="row">
                <div>
                    <div>
                        <img src=@Model.Photo width="130" height="130" alt="photo1" style="padding:20px;margin-left:30px" />
                    </div>
                    <div class="row">
                        <div style="width: 500px;  justify-content: center; ">
                            <div class="form-group" style="margin-left: 40px">
                                <label asp-for="Name" class="control-label font  whiteY" > @Resources.Resource.Name</label>
                                <h1 class="form-control p1" style="width: 420px">@Html.DisplayFor(model => model.Name)</h1>
                            </div>
                            <div class="form-group" style="margin-left: 40px">

                                <label class="control-label font  whiteY" > @Resources.Resource.Post</label>
                                <h1 class="form-control p1" style="width: 420px">@Html.DisplayFor(model => model.PostName)</h1>
                            </div>

                            <div class="form-group" style="margin-left: 40px">
                                <label class="control-label font  whiteY"> @Resources.Resource.Speciality</label>
                                <h1 class="form-control p1" style="width: 420px">@Html.DisplayFor(model => model.SpecialityName)</h1>
                            </div>
                        </div>
                        <br />

                        <div style="margin: 10px auto 10px auto;width: max-content;">
                            <form method="post" asp-action="DeleteConfirmed" asp-controller="Coach"
                                  style="width: max-content; float: left;height: 38px;">
                                <input type="hidden" asp-for="Id" name="id" />
                                <input class="input_subm_del font y buttonsGY" style="height: 38px;" type="submit" value="@Resources.Resource.Delete" />
                            </form>
                            <a asp-action="GetCoaches" asp-controller="Coach" style="margin-left: 10px;" class="btn btn-primary buttonsGY">@Resources.Resource.Back </a><br />
                        </div><br />
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>