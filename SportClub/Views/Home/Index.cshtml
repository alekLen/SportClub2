                inf0.style.display = 'block';
                inf1.style.display = 'none';
                inf2.style.display = 'none';
               
            } else {
                inf1.style.display = 'none';
                inf2.style.display = 'none';               
                inf0.style.display = 'block';
            }
        });
        im21.addEventListener('click', function () {
            if (inf21.style.display === 'none') {
                inf21.style.display = 'block';
                inf22.style.display = 'none';
                inf23.style.display = 'none';
            } else {
                inf21.style.display = 'none';
                inf23.style.display = 'none';
                inf22.style.display = 'block';
