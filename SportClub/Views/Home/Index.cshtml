            if (inf1.style.display === 'none') {
                inf1.style.display = 'block';
                inf2.style.display = 'none';               
                inf0.style.display = 'none';
            } else {
                inf1.style.display = 'none';
                inf2.style.display = 'none';           
                inf0.style.display = 'block';
            }
        });
        im2.addEventListener('click', function () {
            if (inf2.style.display === 'none') {
                inf2.style.display = 'block';
                inf1.style.display = 'none';               
                inf0.style.display = 'none';
            } else {
