<h4 class=" b1 b3 c20 center pr">График</h4>
<div class="center pr">
    <div class="c3">

        <div class=" card c7">
            <h4>@Resources.Resource.Addition</h4>
            <form asp-controller="Time" method="post">
                @model SportClub.BLL.DTO.TimeTDTO

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <span>Время начала</span><br />
                    <input name="Start" class="form-control card _c7" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span>Время окончания</span><br />
                    <input name="End" class="form-control card _c7" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" formaction="AddTimeT" value="@Resources.Resource.Add" class="btn btn-primary c2" />
                </div>
            </form>

        </div>
        <div class=" card c7">
            <h4> @Resources.Resource.Editing</h4>
            <form asp-controller="Admin" method="post">
                <label>График</label>
                <select asp-for="Id" class="form-control card _c7" asp-items="ViewBag.TimeId"></select>

                <br />
                <div class="form-group">
                    <input type="submit" formaction="DeleteTime" value="@Resources.Resource.Delete" class="btn btn-primary c2 " /><br /><br />
                    <input type="submit" formmethod="get" formaction="EditTime" value="@Resources.Resource.Edit" class="btn btn-primary c2" />
                </div>
            </form>
        </div>
    </div>
</div>
