@model SportClub.BLL.DTO.TrainingGroupDTO

<div class="flex " style="justify-content:space-around">
    <div class="flex">
    <div class=" marg" style="background-color:dimgray">
        <a class="btn btn-outline-light whiteY buttonsGY" asp-route-RoomId="@Model?.RoomId" asp-action="RoomWithShedule"
               asp-controller="Time" style="border:2px solid #2F4F4F"><strong>X</strong></a>
    </div>


    
        <div class="div_reg2">
            <p class="font whiteY" style="font-size: 32px;  padding-top: 30px; text-align: center">Добавление тренировки</p>
            <hr class="whiteY" />
            <div class="row">
                <div>
                    <br />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div style="width: 550px;  justify-content: center; ">
                    <div class="form-group" style="margin-left: 70px">
                        <input id="day" type="hidden" name="day" value="@Model.Day" />
                        <input id="dayName" name="dayName" value="@Model.DayName" readonly class="font" style="width: 120px" />
                        <input id="time" name="time" value="@Model.Time" readonly class="font" style="width: 120px" />
                        <input id="roomId" type="hidden" name="roomId" value="@Model.RoomId" />
                        <input id="roomName" name="roomName" value="@Model.RoomName" readonly class="font" style="width: 120px" />

                    </div><br />
                    <div class="form-group" style="margin-left: 70px">
                        <label style=" font-size: 16px;" class="font whiteY">Выбрать тренера</label>
                        <select asp-for="Id" name="coachId" class="form-control card _c7" class="font" asp-items="ViewBag.CoachId" style="width: 420px"></select>


                        <div class="form-group" >
                            <label asp-for="Number" class="control-label font white-color_size20"></label>
                            <input asp-for="Number" id="number" type="number" value="1" min="1" placeholder="1" class="form-control" style="width: 420px">
                            <span asp-validation-for="Number" class="text-danger" style="width: 450px"></span>
                        </div>
                    </div>
                    <br /><br />
                    <div style="margin-left: 200px">
                        
                        <input type="submit" value="Сохранить" formaction="ToAddTrainingGroup" class="btn btn-outline-light buttonsGY" />
                    </div>
                    <br /><br />
                </div>
            </form>
                </div>
            </div>
        </div>
    </div>
</div>

