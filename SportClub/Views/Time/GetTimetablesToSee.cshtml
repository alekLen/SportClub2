@{
    ViewData["Title"] = "Timetables";
}
@model MakeSheduleView
<h4>@Resources.Resource.AllSc</h4>
<div>
    <a asp-area="" asp-controller="Time" asp-action="Back" class="btn btn-primary buttons">@Resources.Resource.Back</a>
</div>
<div class="flex" style="flex-wrap:wrap">
    @foreach (var item in Model.times)
    {
        <div class="padd3 div_reg2">
            <form method="get">
                <div class="padd3 whiteY">
                <input type="hidden" name="id" value="@item.Id" />
                @foreach (var t in item.Times)
                {
                    <input type="text" value="@t" style="width:150px;"> <br />
                }
                <br />
                    <input type="submit" style="margin-left:10px;" formaction="DeleteTimetable" readonly value="@Resources.Resource.Delete" class="btn btn-primary c2 buttonsGY" />
            </div>
            </form>
        </div>
    }
  <form>
        <div class="padd3 div_reg2 whiteY">
            <input value="@Resources.Resource.oDay" readonly style="width:120px;"  />
   </div>
   </form>

