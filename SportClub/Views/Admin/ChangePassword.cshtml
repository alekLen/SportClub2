@model SportClub.Models.CangePasswordModel
@using Microsoft.AspNetCore.Http


      
       
        <div style="background-color: #374566; box-shadow: inset 0 -3em 3em rgba(0, 0, 0, 0.1), 0.3em 0.3em 1em black; border-radius: 15px; width: 300px; margin-left: 400px; padding:20px">
 <form >
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id"  />
        <div class="form-group" style="margin-left: 20px">
            <span style="color: white" class="font form-check-label">@Resources.Resource.EnterNewPassword</span><br />
        <input type="password" asp-for="Password" class="form-control" /><br />
            <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        <div class="form-group" style="margin-left: 20px">
            <span style="color: white" class="font form-check-label">@Resources.Resource.passwordConf</span><br />
        <input type="password" asp-for="PasswordConfirm" class="form-control" /><br />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
               </div>
               <div>
            <input type="submit" class="btn btn-outline-light" formaction="SaveNewPassword" value="@Resources.Resource.changePassword" />
                    </div>
    </form>
        </div>
   
      
    
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
