@model SportClub.Models.LoginModel
@using Microsoft.AspNetCore.Http

<form id="formLog">
  @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
        <div style="background-color: #374566; box-shadow: inset 0 -3em 3em rgba(0, 0, 0, 0.1), 0.3em 0.3em 1em black; border-radius: 10px; width: 275px;padding:10px">
   
        <span id="error-login1" style="color:red;display:none;">* @Resources.Resource.loginpassword</span>

        <div >
            @if (Context.Session.GetString("login") == null)
            {
                @Html.ValidationSummary(true, "")
                <div>
                        @Html.LabelFor(model => model.Login, new { @class = "white" })
                    <div>
                            <input asp-for="Login" type="text" class="form-control" style="margin-left:-15px">
                            @* @Html.EditorFor(model => model.Login, new { @class = "bordrad7l" }) *@
                        @Html.ValidationMessageFor(model => model.Login, "")
                    </div>
                </div>

                <div>
                        @Html.LabelFor(model => model.Password, new { @class = "white" })
                        <div>
                            <input asp-for="Password" type="password" class="form-control" style="margin-left:-15px">
                            @* @Html.PasswordFor(model => model.Password, new { @class = "bordrad7" }) *@
                        @Html.ValidationMessageFor(model => model.Password, "")
                    </div>
                </div>

               @* <div>
                    <br>
                    <div>
                        <input type="submit" class="y" value="Вход" />
                    </div>
                </div>*@
            }
        </div>
        </div>
    }
</form>
<script>
    let focusl = function () {
        let l1 = document.getElementById("error-login1");
        l1.style.display = "none";
    }
</script>

   
