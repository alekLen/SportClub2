                    <button class="mdropbtn">
                        Регистрация...
                        <i class="fa fa-caret-down  whiteY"></i>
                    </button>
                    <div class="mdropdown-content" style="color:#EEE8AA;">
                        <a class=" whiteY" asp-area="" asp-controller="Login" asp-action="RegistrationAdmin">@Resources.Resource.AdminRegistration</a> 
                        <a class=" whiteY" asp-area="" asp-controller="Login" asp-action="RegistrationCoach">@Resources.Resource.CoachRegistration</a> 
                        <a class=" whiteY" asp-area="" asp-controller="Login" asp-action="RegistrationClient">@Resources.Resource.UserRegistration</a> 

                    </div>
                </div>

                <div class="mdropdown">
                    <button class="mdropbtn whiteY" style="">
                        @Resources.Resource.TimeAndSchedule
                        <i class="fa fa-caret-down  whiteY"></i>
                    </button>
                    <div class="mdropdown-content" style="">
                        <a class=" whiteY" asp-area="" asp-controller="Time" asp-action="AddTimeT">@Resources.Resource.CreateTimeAndScheduleForDay</a>
                        @*    <a class=" whiteY" asp-area="" asp-controller="Time" asp-action="AddTimetable">Создать график дня</a> *@
                    </div>
                </div>

                <div class="mdropdown">
                    <button class="mdropbtn" style="font-family: 'MyFontNormal';">
                        Зал...<i class="fa fa-caret-down whiteY"></i>
                    </button>
                    <div class="mdropdown-content" style="">
                        <a class=" whiteY" asp-area="" asp-controller="Admin" asp-action="AddRoom">Добавление/Редактирование зала</a>
               
                        <a class=" whiteY" asp-area="" asp-controller="Time" asp-action="Room_Shedule">@Resources.Resource.Shedule</a>
                    </div>
                </div>

                <a class=" whiteY" asp-area="" asp-controller="Admin" asp-action="AddPost">@Resources.Resource.PositionsAndSpecialties</a>


                <div class="mdropdown" style="float:right;">
                    <button class="mdropbtn whiteY" style="">
                        Списки..<i class="fa fa-caret-down whiteY"></i>
                    </button>
                    <div class="mdropdown-content">
                        @using (Html.BeginForm("GetClients", "Users", FormMethod.Get))
                        {
                            <input style="float: right;width:100%; color:#EEE8AA" class="dv1n1 my_bg-white1 my_bn" type="submit" value="@Resources.Resource.Users" />
                        }
                        @using (Html.BeginForm("GetCoaches", "Coach", FormMethod.Get))
                        {
                            <input style="float: right;width:100%; color:#EEE8AA" class="dv1n1 my_bg-white1 my_bn" type="submit" value="@Resources.Resource.Coaches" />
                        }
                        @using (Html.BeginForm("GetAdmins", "Admin", FormMethod.Get))
                        {
                            <input style="float: right;width:100%; color:#EEE8AA" class="dv1n1 my_bg-white1 my_bn" type="submit" value="@Resources.Resource.Admins" />
                        }

                    </div>
                </div>

            }

        </div>

    </header>

