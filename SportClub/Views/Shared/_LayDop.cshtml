    <script>

        $(document).ready(function () {
            $("body").on("click", ".btn-Login", function (e) {
                e.preventDefault();
                $("<div id='dialogContent'></div>")
                    .addClass("dialog")
                    .appendTo("body")
                    .load("/Login/Login")
                    .dialog({
                        title: '@Html.Raw(@Resources.Resource.Authorization)',
                        close: function () { $(this).remove(); },
                        dialogClass: 'myTitleClass',
                        modal: true,
                        resizable: false,
                        buttons: [{
                            class: "input_subm3",//
                            text: '@Html.Raw(@Resources.Resource.Enter)',
                            click: function () {
                                // "ВХОД" : function () {
                                $.ajax({
                                    url: "@Url.Action("Login", "Login")",
                                    type: "POST",
                                    data: $('#formLog').serialize(),
                                    datatype: "json",
                                    success: function (response) {

                                        if (response) {
                                            // location.reload(true);
                                            window.location.href = "@Url.Action("Index", "Home")";
                                        }
                                        else {
                                            let l2 = document.getElementById("error-login1");
                                            l2.style.display = "inline";
                                        }
                                    }
                                });
                            }
                        }],
                        open: function (event, ui) {
                            // Устанавливаем стили для заголовка
                            $(this).closest(".ui-dialog")
                                .find(".ui-dialog-titlebar")
                                .css({
                                    "background-color": "rgb(80, 80, 80)", // Фон заголовка
                                    "color": "#EEE8AA"
                                });
                            $(this).closest(".ui-dialog")
                                .css({
                                    "box-shadow": "inset 0 - 3em 3em rgba(0, 0, 0, 0.1), 0.3em 0.3em 1em black",
                                    "border-radius": "5px",
                                    "background-color": "rgb(80, 80, 80)",
                                    "background - image": "url('~/Coaches/фон5.jpg')"

                                });
                            $(this).closest(".ui-dialog")
                                .find(".ui-dialog-content")
                                .css({
                                    "background-color": "rgb(80, 80, 80)",
                                    "background - image": "url('~/Coaches/фон5.jpg')"
                                });
                            $(this).closest(".ui-widget-content")
                                .css({
                                    "border": "none",
                                    "background-color": "rgb(80, 80, 80)",
                                    "background - image": "url('~/Coaches/фон5.jpg')"
                                });
                            $(this).closest(".ui-dialog")
                                .find(".ui-dialog-buttonpane")
                                .css({
                                    "border-width": "0px",
                                    "background-color": "rgb(80, 80, 80)",
                                    "background - image": "url('~/Coaches/фон5.jpg')"
                                });
                        }
                    });

            });


        });

        var contact = document.getElementById('contact');
        var contactInfo = document.getElementById('contact-info');

        contact.addEventListener('click', function () {
            if (contactInfo.style.display === 'none') {
                contactInfo.style.display = 'block';
                contactInfo2.style.display = 'none';
            }
        });
        var contact2 = document.getElementById('contact2');
        var contactInfo2 = document.getElementById('contact-info2');

        contact2.addEventListener('mouseover', function () {
            contactInfo2.style.display = 'block';
            contactInfo.style.display = 'none';
        });

        contact2.addEventListener('mouseout', function () {
            contactInfo2.style.display = 'none';
            contactInfo.style.display = 'block';
        });

        contact2.addEventListener('click', function () {
            if (contactInfo2.style.display === 'none') {
                contactInfo2.style.display = 'block';
                contactInfo.style.display = 'none';
            } else {
                contactInfo2.style.display = 'none';
                contactInfo.style.display = 'block';
            }
        });

    </script>
