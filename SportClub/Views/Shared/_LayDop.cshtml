<body id="changing-background" style=" transition: background-image 2s ease; background-size: cover;width: 100%;height: 100%; ">

    <header>
        <div class="my_navbar" style="color:#EEE8AA;padding-right:10px;">
            <a id="sportclub" style="color:#EEE8AA;" asp-area="" asp-controller="Home" asp-action="Index">SportClub</a>

            @using (Html.BeginForm("ChangeCulture", "Home"))
            {
                <div class="dv1n2">
                    <select class="my_bg-white1 my_bn t_3" style="color:#EEE8AA; padding: 2px 6px;width:max-content;text-align:center; " name="lang">
                        <option style="color:#EEE8AA; " value="ru">Русский</option>
                        <option style="color:#EEE8AA; " value="en">English</option>
                        <option style="color:#EEE8AA;" value="uk">Українська</option>
                        <option style="color:#EEE8AA;" value="de">Deutsch</option>
                        <option style="color:#EEE8AA; " value="fr">Français</option>
                    </select>
                    <br />
                    <input class="my_bg-white1 my_bn" style="color:#EEE8AA;width:max-content;height:27px;text-align:center" type="submit" name="submit" value="@Resources.Resource.ChooseLang">

                </div>
            }


            @using Microsoft.AspNetCore.Http
            @if (Context.Session.GetString("admin") != null || Context.Session.GetString("client") != null || Context.Session.GetString("coach") != null)
            {
                @using (Html.BeginForm("Logout", "Login", FormMethod.Get))
                {
                    <input style="float: right; color:#EEE8AA;" class="dv1n1 my_bg-white1 my_bn" type="submit" value="@Resources.Resource.LogOut" />
                    <a class=" active  whiteY" style="float: right;">@Resources.Resource.Welcome, @Context.Session.GetString("login")&nbsp;&nbsp;</a>
                }
            }
            @if (Context.Session.GetString("client") != null)
            {
                @using (Html.BeginForm("ClientProfile", "Users", FormMethod.Get))
                {
                    <input style="float: right;width:max-content; color:#EEE8AA;" class="dv1n1 my_bg-white1 my_bn" type="submit" value="@Resources.Resource.Profile" />
                }

                @using (Html.BeginForm("MyShedule", "Users", FormMethod.Get))
                {
                    <input style="float: right;width:max-content; color:#EEE8AA;" class="dv1n1 my_bg-white1 my_bn" type="submit" value="@Resources.Resource.MyWorkouts" />
                }
                @using (Html.BeginForm("Room_Shedule", "Users", FormMethod.Get))
                {
                    <input style="float: right;width:max-content; color:#EEE8AA" class="dv1n1 my_bg-white1 my_bn" type="submit" value="@Resources.Resource.Shedule" />
                }
                @*  <a class="nav-link card2  white" asp-controller="Coach" asp-action="AllCoachesToSee" style="">Наша команда</a>
            <a class="nav-link card2  white" asp-controller="Admin" asp-action="AllRoomsToSee" style="">Залы для тренировок</a> *@
                <a class="nav-link card2  whiteY" href="#allcoaches">Наша команда</a>
                <a class="nav-link card2  whiteY" href="#allrooms">Залы для тренировок</a>
                <a class="nav-link card2 " style="color:#EEE8AA;" href="#abonem">@Resources.Resource.Subcrip</a>
            }
            else if (Context.Session.GetString("coach") != null)
            {

                @using (Html.BeginForm("Room_Shedule", "Coach", FormMethod.Get))
                {
                    <input style="float: right;width:max-content; color:#EEE8AA" class="dv1n1 my_bg-white1 my_bn  whiteY" type="submit" value="@Resources.Resource.Shedule" />
                }
                @using (Html.BeginForm("MyShedule", "Coach", FormMethod.Get))
                {
                    <input style="float: right;width:max-content; color:#EEE8AA" class="dv1n1 my_bg-white1 my_bn  whiteY" type="submit" value="@Resources.Resource.MyWorkouts" />
                }

                @using (Html.BeginForm("CoachProfile", "Coach", FormMethod.Get))
                {
                    <input style="float: right;width:max-content; color:#EEE8AA" class="dv1n1 my_bg-white1 my_bn  whiteY" type="submit" value="@Resources.Resource.Profile" />
                }
            }
            else if (Context.Session.GetString("admin") != null)
            {
                @using (Html.BeginForm("AdminProfile", "Admin", FormMethod.Get))
                {
                    <input style="float: right;width:max-content; color:#EEE8AA" class="dv1n1 my_bg-white1 my_bn  whiteY" type="submit" value="@Resources.Resource.Profile" />
                }
            }
            else
            {
                <a href="javascript:void(0)" class="nav-link card2 btn-Login" style="color:#EEE8AA;">Войти</a>
                <a asp-area="" asp-controller="Login" asp-action="RegistrationClient" style="color:#EEE8AA;">@Resources.Resource.Registration</a>
               
                <a class="nav-link card2 " style="color:#EEE8AA;" href="#allcoaches">Наша команда</a>
                <a class="nav-link card2 " style="color:#EEE8AA;" href="#allrooms">Залы для тренировок</a>
                <a class="nav-link card2 " style="color:#EEE8AA;" href="#abonem">@Resources.Resource.Subcrip</a>

            }

            @if (Context.Session.GetString("admin") != null)
            {
